DirectoryIndex index.html

<IfModule mod_rewrite.c>
  Options +FollowSymLinks -MultiViews
  # Turn mod_rewrite on
  RewriteEngine On
  RewriteBase /
  RewriteRule ^api\/content\/(.*)$ http://wp.markhadley.la/wp-content/$1 [P,L]
  RewriteRule ^api\/blog\/(.*)$ http://wp.markhadley.la/wp-json/$1 [P,L]
  RewriteRule ^api\/waveform(.*)$ http://www.waveformjs.org/w$1 [P,L]
  RewriteRule ^api\/images\/(.*)$ http://$1 [P,L]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.html?$1 [L,QSA]
</IfModule>
